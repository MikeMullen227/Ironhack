<h1>New Bid for <%= @product.name %> </h1>

<%= form_for [@user, @product] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<br>

	<%= f.label :deadline %>
	<%= f.datetime_field :deadline %>

	<br>

	<%= f.submit%>

<% end %>

